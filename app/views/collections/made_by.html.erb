<% content_for :meta_title, "#{DEFAULT_META['title']} - Made by #{@brand.name}" %>
<% content_for :meta_description, @view_model.meta_description %>

<div class="hero hero--collection">
  <h1 class="hero__title">
    Made By <br/><%= @brand.name %>
  </h1>

  <h2 class="hero__subtitle hero__subtitle--with-action">
    <%= @view_model.description.html_safe %> <br/>
  </h2>

  <%= render 'explore_more' %>
</div>

<%= render 'products', products: @products %>
