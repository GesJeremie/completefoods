<h1>Create Brand</h1>

<%= form_for [:dashboard, @brand] do |form| %>

  <% if @brand.errors.any? %>
    <% @brand.errors.full_messages.each do |message| %>
      <%= message %><br/>
    <% end %>
  <% end %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <br/>

  <%= form.label :website %>
  <%= form.text_field :website %>

  <br/>

  <%= form.label :facebook %>
  <%= form.text_field :facebook %>

  <br/>

  <%= form.label :country_id %>
  <%= form.collection_select :country_id, Country.all, :id, :name %>

  <br/>

  <%= form.submit 'Create Brand' %>
<% end %>
