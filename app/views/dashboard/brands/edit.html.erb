<div class="container">
  <h1 class="mt-3 mb-3">Edit Brand <%= @brand.name %></h1>

  <%= form_for [:dashboard, @brand] do |form| %>
    <% if @brand.errors.any? %>
      <% @brand.errors.full_messages.each do |message| %>
        <%= message %><br/>
      <% end %>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :website %>
      <%= form.text_field :website, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :facebook %>
      <%= form.text_field :facebook, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :country_id %>
      <%= form.collection_select :country_id, Country.all, :id, :name, {}, {class: 'form-control'} %>
    </div>

    <%= form.submit 'Update Brand', class: 'btn btn-primary mt-3' %>
  <% end %>
</div>
