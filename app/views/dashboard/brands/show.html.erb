<div class="container">

  <h1>Brand <%= @brand.name %> (#<%= @brand.id %>)</h1>

  <div class="mt-3 card">
    <div class="card-body">
      <strong>Name:</strong> <%= @brand.name %><br/>
      <strong>Website:</strong> <%= @brand.website %><br/>
      <strong>Facebook:</strong> <%= @brand.facebook %><br/>
      <strong>Country:</strong> <%= @brand.flag %> <%= @brand.country.name %>
    </div>
    <div class="card-footer">
      <%= link_to 'Edit', edit_dashboard_brand_path(@brand) %>
    </div>
  </div>


  <h2 class="mt-3 mb-3">Products</h2>
  <div class="table-responsive mt-3 mb-3">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col" colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>

      <% @brand.products.each do |product| %>

        <tr>
          <th scope="row"><%= product.id %></th>
          <td><%= product.name %></td>
          <td>
            <%= link_to 'Show', dashboard_product_path(product), target: '_blank' %>
          </td>
          <td>
            <%= link_to 'Edit', edit_dashboard_product_path(product), target: '_blank' %>
          </td>
        </tr>

      <% end %>

      </tbody>
    </table>
  </div>
</div>

