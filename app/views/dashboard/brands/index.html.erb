
<div class="container">
  <h1 class="mb-3 mt-3">Listing Brands</h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Made In</th>
          <th scope="col">Products</th>
          <th scope="col" colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>

      <% @brands.each do |brand| %>

        <tr>
          <th scope="row"><%= brand.id %></th>
          <td><%= brand.name %></td>
          <td><%= brand.flag %> <%= brand.country.name %></td>
          <td>
            <%= brand.products.count %>
          </td>
          <td>
            <%= link_to 'Show', dashboard_brand_path(brand) %>
          </td>
          <td>
            <%= link_to 'Edit', edit_dashboard_brand_path(brand) %>
          </td>
          <td>
            <%= link_to 'Delete', dashboard_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>

      <% end %>

      </tbody>
    </table>
  </div>

  <%= link_to 'New Brand', new_dashboard_brand_path, class: 'btn btn-primary' %>
</div>
