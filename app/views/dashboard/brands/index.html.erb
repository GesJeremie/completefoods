<div class="container">
  <h1 class="mb-3 mt-3">Brands <span class="text-muted">(<%= @brands.size %>)</span></h1>

  <%= link_to 'New Brand', new_dashboard_brand_path, class: 'btn btn-primary mb-3' %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Made In</th>
          <th scope="col">Products</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>

      <tbody>

      <% @brands.each do |brand| %>

        <tr>
          <th scope="row"><%= brand.id %></th>
          <td><%= brand.name %></td>
          <td><%= flag_icon(brand.country_code_symbol) %> <%= brand.country.name %></td>
          <td>
            <%= brand.products.count %>
          </td>
          <td>
            <%= link_to 'Show', dashboard_brand_path(brand.model) %> /
            <%= link_to 'Edit', edit_dashboard_brand_path(brand.model) %> /
            <%= link_to 'Delete', dashboard_brand_path(brand.model), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>

      <% end %>

      </tbody>
    </table>
  </div>
</div>
