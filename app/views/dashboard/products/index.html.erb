<div class="container">
  <h1 class="mb-3 mt-3">Products <span class="text-muted">(<%= @products.size %>)</span></h1>

  <%= link_to 'New Product', new_dashboard_product_path, class: 'btn btn-primary mb-3' %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Brand</th>
          <th scope="col">Name</th>
          <th scope="col">Active</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>

      <tbody>

      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></th>
          <td><%= link_to product.brand.name, dashboard_brand_path(product.brand) %></td>
          <td><%= product.name %></td>
          <td>

            <% if product.active? %>
              <span class="text-success"><%= humanize_boolean(product.active?) %></span>
            <% else %>
              <span class="text-danger"><%= humanize_boolean(product.active?) %></span>
            <% end %>

          </td>
          <td>
            <%= link_to 'Show', dashboard_product_path(product) %> /
            <%= link_to 'Edit', edit_dashboard_product_path(product) %> /
            <%= link_to 'Delete', dashboard_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>
