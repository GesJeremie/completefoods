<div class="container">
  <h1 class="mb-3 mt-3">Listing Products</h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Brand</th>
          <th scope="col">Name</th>
          <th scope="col">Active</th>
          <th scope="col" colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>

      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></th>
          <td><%= product.brand.name %></td>
          <td><%= product.name %></td>
          <td><%= humanize_boolean(product.active?) %></td>
          <td><%= link_to 'Show', dashboard_product_path(product) %></td>
          <td><%= link_to 'Edit', edit_dashboard_product_path(product) %></td>
          <td><%= link_to 'Delete', dashboard_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>

    <%= link_to 'New Product', new_dashboard_product_path, class: 'btn btn-primary' %>
</div>
