<div class="container">
  <h1 class="mb-3 mt-3">Newsletters (<%= @newsletters.size %>)</h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Email</th>
          <th scope="col">Date</th>
        </tr>
      </thead>

      <tbody>

      <% @newsletters.each do |newsletter| %>
        <tr>
          <td><%= newsletter.id %></th>
          <td><%= newsletter.email %></td>
          <td><%= newsletter.created_at.strftime("%B %d, %Y - %H:%M:%S") %></td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>

</div>
