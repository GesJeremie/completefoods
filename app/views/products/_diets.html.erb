<ul class="product-details__attributes">
  <li class="product-details__attribute <%= 'product-details__attribute--unavailable' unless product.diet.vegetarian? %>">
    <div class="product-details__attribute-icon">
      <%= inline_svg('watermelon.svg', class: 'icon') %>
    </div>
    <div class="product-details__attribute-label">
      Vegetarian
    </div>
    <div class="product-details__attribute-value">
      <%= humanize_boolean(product.diet.vegetarian?) %>
    </div>
  </li>
  <li class="product-details__attribute <%= 'product-details__attribute--unavailable' unless product.diet.vegan? %>">
    <div class="product-details__attribute-icon">
      <%= inline_svg('vegan.svg', class: 'icon') %>
    </div>
    <div class="product-details__attribute-label">
      Vegan
    </div>
    <div class="product-details__attribute-value">
      <%= humanize_boolean(product.diet.vegan?) %>
    </div>
  </li>
</ul>
