<% @layout_with_filters = true %>
<% content_for :meta_title, "#{DEFAULT_META['title']} - We Help you Find your Next Soylent" %>

<div class="hero hero--products">
  <h1 class="hero__title">
    Explore all Products
  </h1>
  <h2 class="hero__subtitle">
    We currently reference <%= count_active_products %> products from <%= count_brands %> brands.
  </h2>
</div>

<div class="guru-card clearfix">
  <div class="guru-card__logo">
    <%= image_tag 'guru.svg' %>
  </div>
  <div class="guru-card__content">
    <div class="guru-card__title">Overwhelmed by the choice?</div>
    <div class="guru-card__description">Let the guru help you find the best Complete Food based on your preferences.</div>
    <a href="#" class="button button--secondary button--capitalized button--with-arrow">Ask the Guru</a>
  </div>
</div>


<div class="grid grid--center">
  <div class="grid__cell grid__cell--70-at-wide">
    <%= render partial: 'products/item', collection: @products, as: :product %>
  </div>
</div>

<%
#render 'shared/newsletter'
%>
