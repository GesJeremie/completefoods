<% content_for :meta_title, "#{DEFAULT_META['title']} - We Help you Find your Next Soylent" %>

<div class="hero hero--products">
  <h1 class="hero__title">
    Explore all Products
  </h1>
  <h2 class="hero__subtitle">
    We currently reference <%= count_active_products %> products from <%= count_brands %> brands.
  </h2>
</div>

<div class="grid grid--center">
  <div class="grid__cell grid__cell--80-at-wide">
    <div class="grid grid--center">
      <div class="grid__cell grid__cell--25">
        <%= render 'wizard/card' %>
      </div>
      <div class="grid__cell grid__cell--75">
        <%= render partial: 'products/item', collection: @products, as: :product %>

        <%= will_paginate @products %>
      </div>
    </div>

  </div>
</div>
