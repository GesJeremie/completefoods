    <%= link_to root_path, class: 'link' do %>
      CompleteFoods<span class="header__logo-guru">.guru</span>
    <% end %>
  </div>

  <div data-action="click->header-menu#onClickMenu" class="header__menu">
    <%= inline_svg('menu.svg', class: 'icon') %>
  </div>

  <div data-target="header-menu.links" class="header__links">
    <%= link_to 'Collections', collections_path, class: 'header__link' %>
