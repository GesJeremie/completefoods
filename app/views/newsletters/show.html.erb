<div class="grid grid--center">
  <div class="grid__cell grid__cell--90 grid__cell--70-at-wide">
    <div class="newsletter">
      <%= form_tag newsletter_path, method: 'post', data: {
          controller: 'modal-form',
          modal_form_options: {
            replace: true,
            closeMethods: ['button'],
            cssClass: ['tingle-modal--newsletter']
          }.to_json
      } do %>

        <div class="newsletter__description heading heading--3">
          Get discounts up to 50% <br/> on your favorite Complete Foods.<br/>
        </div>

        <div class="newsletter__highlight">No Spam. No Bullshit.</div>

        <%= image_tag 'sure.gif', class: 'newsletter__gif' %>

        <% if flash[:error] %>
          <div class="alert alert--error">
            <%= flash[:error] %>
          </div>
        <% end %>

        <% if flash[:success] %>
          <div class="alert alert--success">
            <%= flash[:success] %>
          </div>
        <% end %>

        <%= email_field_tag 'email', nil, placeholder: 'Email', class: 'newsletter__input', data: { controller: 'focus' }, required: true, email: true %>

        <%= button_tag type: 'submit', class: 'button button--secondary button--large button--no-margin button--with-icon' do %>
          Notify Me <%= inline_svg('send_mail.svg', class: 'icon') %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
