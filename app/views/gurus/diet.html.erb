<% content_for :note, 'Note: More diets will be added such as Ketogenic, ...' %>

<%= render layout: 'step', locals: { step: @guru_step } do %>

  <%= form_tag diet_create_guru_path, method: 'post' do %>
    <div class="heading heading--4 guru__question">
      Do you follow a specific diet?
    </div>

    <div class="guru__choices">
      <div class="grid">
        <div class="grid__cell grid__cell--50">
          <%= guru_checkbox_tag(
            label: "I'm Vegan",
            icon: 'plant',
            attribute: :vegan,
            answer: @guru_step.answer_for(:vegan)
            ) %>
        </div>
        <div class="grid__cell grid__cell--50">
          <%= guru_checkbox_tag(
            label: "I'm Vegetarian",
            icon: 'watermelon',
            attribute: :vegetarian,
            answer: @guru_step.answer_for(:vegetarian)
            ) %>
        </div>
      </div>
    </div>

    <%= render 'gurus/footer' %>
  <% end %>
<% end %>
