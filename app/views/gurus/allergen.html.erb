<% content_for :note, 'Note: More allergies will be added to this question such as nuts, soy, ...' %>

<%= render layout: 'step', locals: { step: @guru_step } do %>

  <%= form_tag allergen_create_guru_path, method: 'post' do %>
    <div class="heading heading--4 guru__question">
      Do you have any food allergies?
    </div>

    <div class="guru__choices">
      <div class="grid">
        <div class="grid__cell grid__cell--50-at-medium">
          <%= guru_checkbox_tag(
            label: 'Gluten',
            icon: 'gluten',
            attribute: :gluten,
            answer: @guru_step.answer_for(:gluten)
            ) %>
        </div>
        <div class="grid__cell grid__cell--50-at-medium">
          <%= guru_checkbox_tag(
            label: 'Lactose',
            icon: 'milk_bottle',
            attribute: :lactose,
            answer: @guru_step.answer_for(:lactose)
            ) %>
        </div>
      </div>
    </div>

    <%= render 'gurus/footer', step: @guru_step %>
  <% end %>
<% end %>
