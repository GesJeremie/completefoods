<% content_for :meta_title, "#{DEFAULT_META['title']} - We Help you Find your Next Soylent" %>

<div class="hero hero--home">
  <%= image_tag 'guru.svg', width: 250 %>
  <h1 class="hero__title">Find your Complete Food.</h1>
  <h2 class="hero__subtitle">There are currently <%= Product.count %> Complete Foods available Worldwide. Choosing the best one can be overwhelming, let the Guru help you find the best <a href="#" class="link link--alt">Complete Food</a> based on your preferences.</h2>
  <a href="" class="button button--large button--secondary button--capitalized button--with-arrow">Ask the Guru</a>
</div>

<div class="divider divider--secondary"></div>

<div class="collections">

  <div class="grid grid--center">
    <div class="grid__cell grid__cell--80-at-wide">
      <h3 class="heading heading--1 heading--center">Browse Collections</h3>
      <hr class="divider divider--small" />

      <% Rails.configuration.collections.slice(0, 8).each_slice(4).with_index do |collections, index| %>
        <div class="grid grid--center">
          <% collections.each do |collection| %>
            <div class="grid__cell grid__cell--50 grid__cell--33-at-medium grid__cell--25-at-wide collections__item collections__item--row-<%= index %>"">
              <a href="<%= collection[:route] %>">
                <div class="collections__cover" style="background-image: url('<%= asset_path(collection[:cover]) %>')">
                  <div class="collections__title"><%= collection[:name] %></div>
                </div>
              </a>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="grid grid--center">
        <%= link_to 'Browse more collections', collections_path, class: 'button button--large' %>
      </div>
    </div>
  </div>
</div>

<div class="divider divider--secondary"></div>


<div class="grid grid--center">
  <div class="grid__cell grid__cell--80">
      <h3 class="heading heading--1 heading--center">Browse Brands</h3>
      <hr class="divider divider--small" />

      <div class="grid grid--center">
        <% Brand.reorder(name: :asc).slice(0, 16).each do |brand| %>
          <div class="grid__cell grid__cell--25">
            <div class="brand-summary">
              <div class="brand-summary__item">
                <% brand =  brand.decorate %>
                <%= brand.flag %>
                <%= brand.name %><br/>
              </div>
            </div>
          </div>
        <% end %>

        <%= link_to 'Browse more brands', brands_path, class: 'button button--large' %>

      </div>

   </div>
</div>
