source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 5.2'

# Use sqlite3 as the database for Active Record
gem 'sqlite3'

# Use Puma as the app server
gem 'puma', '~> 4.3'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.5'

# Postgresql Driver
gem 'pg'

# Linting
gem 'rubocop', require: false

# Encrypt password
gem 'bcrypt'

# We need countries!
gem 'countries'

# We need currencies!
gem 'money-rails', '~>1'
gem 'money-open-exchange-rates'

# Resize pictures
gem 'mini_magick'

# Models without databases
gem 'active_hash'

# Pagination
gem 'will_paginate'

# Markdown Converter
gem 'redcarpet'

# Admin
gem 'activeadmin'
gem 'formadmin'

# Slack!
gem 'slack-notifier'

# Front-end
gem 'inline_svg'
gem 'avalanche-rails', '~> 1.2.0'
gem 'lodash-rails'
gem 'jquery-rails'
gem 'flag-icons-rails'
gem 'bootstrap', '~> 4.1.1'
gem 'js-routes'
gem 'ejs'

group :development, :test do
  gem 'pry-rails'
  gem 'faker'
end

group :development do
  gem 'web-console'
  gem 'listen', '~> 3.0.5'
  gem 'rails_real_favicon'
  gem 'bullet'
  gem 'scout_apm'
end

group :test do
end
